.mui-action-back {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 2;
  width: 40px;
  height: 40px;
  background: #000;
  border-radius: 50%;
  line-height: 40px;
  text-align: center;
  color: #fff;
}
.mui-content {
  background: #fff;
  padding: 20px;
  overflow: scroll;
  margin-bottom: 2rem;
}
.title {
  text-align: center;
  font-size: 0.2rem;
}
.book-main1 {
  width: 100%;
  height: 6.22rem;
  overflow: hidden;
  margin-top: 20px;
  display: flex;
  flex-direction: row;
  font-size: 0.2rem;
  position: relative;
}
.book-main1 .more {
  position: absolute;
  bottom: 0;
  left: 50%;
  margin-left: -50px;
  width: 100px;
  height: 30px;
  text-align: center;
  background: #F7F7F7;
  border-left: 1px solid #000;
  border-top: 1px solid #000;
  border-right: 1px solid #000;
  border-radius: 8px 8px 0 0;
  color: #C4C4C4;
}
.book-main1 .more span {
  font-size: 0.2rem;
  margin-top: 5px;
}
.book-main1 .oneTitle {
  width: 50%;
  border-right: 1px solid #eee;
  overflow: scroll;
}
.book-main1 .oneTitle ul {
  border-top: 1px solid #eee;
  border-left: 1px solid #eee;
  border-radius: 10px 0 0 10px;
}
.book-main1 .oneTitle li {
  padding: 20px;
  display: flex;
  justify-content: space-between;
}
.book-main1 .oneTitle li span {
  font-size: 0.3rem;
  color: #d3d3d3;
}
.book-main1 .twoTitle {
  width: 50%;
  overflow: scroll;
  border-left: 1px solid #eee;
}
.book-main1 .twoTitle ul {
  border-top: 1px solid #eee;
  border-right: 1px solid #eee;
  border-radius: 0px 10px 10px 0px;
}
.book-main1 .twoTitle li {
  padding: 20px;
}
.book-main2 {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  margin-top: 20px;
  border: 1px solid #000;
  border-radius: 8px;
}
.book-main2 .book-head {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  background: #eee;
  padding: 20px;
}
.book-main2 .book-head .iconfont {
  font-size: 0.3rem;
}
.book-main2 .book-text {
  padding: 20px 30px;
}
